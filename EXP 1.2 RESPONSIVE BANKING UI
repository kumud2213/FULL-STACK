<body>
  <div class="bank-container">
    <h2>Banking App</h2>
    <div class="balance-box">Balance: â‚¹<span id="balance">1000</span></div>

    <div class="controls">
      <input type="number" id="amount" placeholder="Enter amount" min="1">
      <button class="deposit" onclick="deposit()">Deposit</button>
      <button class="withdraw" onclick="withdraw()">Withdraw</button>
    </div>
  </div>

  <script>
    let balance = 1000;
    const balanceEl = document.getElementById("balance");

    function deposit() {
      let amount = parseFloat(document.getElementById("amount").value);
      if (amount > 0) {
        balance += amount;
        updateBalance();
      } else {
        alert("Enter a valid amount!");
      }
      document.getElementById("amount").value = "";
    }

    function withdraw() {
      let amount = parseFloat(document.getElementById("amount").value);
      if (amount > 0 && amount <= balance) {
        balance -= amount;
        updateBalance();
      } else if (amount > balance) {
        alert("Insufficient Balance!");
      } else {
        alert("Enter a valid amount!");
      }
      document.getElementById("amount").value = "";
    }

    function updateBalance() {
      balanceEl.textContent = balance.toFixed(2);
    }
  </script>
